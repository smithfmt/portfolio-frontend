---
import HeroSection from '@components/sections/HeroSection.astro';
import Layout from '@layouts/Layout.astro';
import { hero, experience } from "@data/text";
import ExperienceSection from '@components/sections/ExperienceSection.astro';
---

<Layout title="Freddie Smith.">
	<main class="relative text-neutral-50 px-48 w-full z-10 flex flex-col justify-center items-center">
		<HeroSection title={hero.title} subtitle={hero.subtitle} />
		<ExperienceSection title={experience.title} experienceList={experience.experiences} />
	</main>
</Layout>
