---
import Background from "@components/layout/Background";
import Footer from "@components/ui/Footer.astro";
import Navbar from "@components/ui/Navbar";
import "@styles/base.css"

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scrollbar-hide lenis lenis-smooth scroll-pt-16 overscroll-none max-w-[100vw]">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio for Freddie Smith" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative h-full w-full overscroll-none">

		<Background client:load />
		<Navbar client:load/>
		<slot />
		<Footer />
	</body>
	<script>import "@scripts/lenisSmoothScroll.js";</script>
	<script>import "@utils/intersectionObserver";</script>
</html>
