---
import Profile from "@assets/images/profile_new.png";
import DownloadIcon from "@components/icons/DownloadIcon";
import { info } from "@data/text";
import IconLink from "@components/ui/IconLink";

type Props = {
	title: string,
	subtitle: string,
}

const { title, subtitle } = Astro.props;
---
<section id="hero-section" class="relative watch-scroll fade-in grid grid-cols-10 w-full md:items-center lg:gap-8 py-16 md:py-32 h-fit md:h-[100svh] px-2">
    <div class="text-2xl sm:text-3xl md:text-4xl lg:text-6xl font-black text-glow-white flex flex-col justify-center md:gap-4 col-span-7 sm:col-span-6">
        <h1 class="">{title}</h1>
        <h2 class="text-xl sm:text-2xl md:text-3xl lg:text-5xl">{subtitle}</h2>
        <div class="flex flex-wrap gap-4 h-12 text-xs md:text-lg font-semibold md:mt-4">
            <a href={info.github} target="_blank" class="flex items-center gap-2 group">
                <IconLink icon="GitHub" h="h-6 md:h-10" />
                <p class="hidden md:block underline-slide">GitHub</p>
            </a>
            <a href={info.linkedin} target="_blank" class="flex items-center gap-2 group">
                <IconLink icon="LinkedIn" h="h-6 md:h-10" />
                <p class="hidden md:block underline-slide">LinkedIn</p>
            </a>
            <a href={info.cv} target="_blank" class="flex items-center md:gap-2">
                <DownloadIcon />
                <p class="underline-slide">CV</p>
            </a>
        </div>
    </div>
    <div class="flex col-span-3 items-center sm:col-span-4 w-full h-full pl-4">
        <div class="relative w-full lg:max-w-[30rem] h-0 pt-[min(100%,30rem)]">
            <div class="absolute top-0 left-0 z-30 h-full w-full shadow-inset rounded-3xl"/>
            <img src={Profile.src} alt="profile" class="absolute top-0 left-0 z-20 h-full w-full rounded-3xl object-cover" >
        </div>
    </div>
</section>